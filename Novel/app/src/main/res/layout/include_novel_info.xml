<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/read_bg_1_disabled"
    android:orientation="vertical">


    <TextView
        android:id="@id/tvChapterTitle"
        style="@style/TextView"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/textSecondary"
        tools:text="title"/>

    <com.startsmake.novel.ui.widget.ReaderTextView
        android:id="@id/tvChapterBody"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvPagePosition"
        android:layout_below="@id/tvChapterTitle"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:lineSpacingMultiplier="1.5"
        android:textSize="20sp"
        tools:text=""/>

    <com.startsmake.novel.ui.widget.BatteryView
        android:id="@id/batterView"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.5dp"
        android:layout_marginLeft="@dimen/margin_small"/>

    <TextView
        android:id="@id/tvCurrentTime"
        style="@style/TextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/batterView"
        android:textColor="@color/textSecondary"
        android:textSize="12sp"
        tools:text="12:43"/>

    <TextView
        android:id="@id/tvPagePosition"
        style="@style/TextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:textColor="@color/textSecondary"
        android:textSize="12sp"
        tools:text="1/13"/>

</RelativeLayout>